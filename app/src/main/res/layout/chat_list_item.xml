<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:cardCornerRadius="3dp"
                                                   app:cardElevation="3dp"
                                                   app:cardUseCompatPadding="true">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="4dp"
                  android:layout_height="wrap_content">

        <com.dev.common.utils.CircleImageView android:layout_width="50dp"
                                              android:layout_margin="4dp"
                                              android:id="@+id/image"
                                              android:src="@drawable/pharmacy"
                                              android:layout_gravity="center_vertical"
                                              android:layout_height="50dp"/>


        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="3"
                      android:layout_gravity="center"
                      android:gravity=""
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="match_parent">


                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/blacklight"
                          android:textSize="15.7sp"
                          android:fontFamily="@font/sfpro_display_semibold"

                          android:id="@+id/name"
                          android:text="Pharmacy Name"
                          android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_gravity="end"
                              android:layout_alignParentEnd="true"
                              android:layout_marginEnd="4dp"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="wrap_content"
                              android:textColor="@color/blacklight"
                              android:textSize="11.7sp"
                              android:fontFamily="@font/sfpro_display_semibold"

                              android:visibility="gone"
                              android:id="@+id/year"
                              android:text="2019"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              android:textColor="@color/blacklight"
                              android:textSize="11.7sp"
                              android:fontFamily="@font/sfpro_display_semibold"

                              android:id="@+id/day"
                              android:text="21"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_marginStart="5dp"
                              android:textColor="@color/blacklight"
                              android:textSize="11.7sp"
                              android:fontFamily="@font/sfpro_display_semibold"

                              android:id="@+id/month"
                              android:text="March"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:textSize="13.7sp"
                          android:fontFamily="@font/sfpro_display_semibold"

                          android:id="@+id/message"
                          android:text="Message will be here "
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_width="16dp"
                           android:id="@+id/done_all"
                           android:src="@drawable/ic_done_all_black_24dp"
                           android:layout_alignParentEnd="true"
                           android:layout_height="16dp"/>
                <ImageView android:layout_width="16dp"
                           android:id="@+id/done"
                           android:src="@drawable/ic_done_black_24dp"
                           android:layout_alignParentEnd="true"
                           android:layout_height="16dp"/>


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">


    <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"


            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="5dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner2"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="2dp"
                android:text="senders Name"
                android:textColor="@color/white"
                android:textSize="11.7sp"
                android:fontFamily="@font/sfpro_display_semibold"

                android:textStyle="italic"/>


        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textSize="13.7sp"
                      android:fontFamily="@font/sfpro_display_semibold"

                      android:id="@+id/message"
                      android:text="Message will be here "
                      android:layout_height="wrap_content"/>

            <ImageView android:layout_width="16dp"
                       android:layout_toEndOf="@+id/message"
                       android:id="@+id/done_all"
                       android:visibility="gone"
                       android:layout_centerInParent="true"
                       android:src="@drawable/ic_done_all_black_24dp"
                       android:layout_alignParentEnd="true"
                       android:layout_height="16dp"/>
            <ImageView android:layout_width="16dp"
                       android:id="@+id/done"
                       android:visibility="gone"
                       android:layout_centerInParent="true"
                       android:layout_toEndOf="@+id/message"

                       android:src="@drawable/ic_done_black_24dp"
                       android:layout_alignParentEnd="true"
                       android:layout_height="16dp"/>


        </RelativeLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_margin="6dp"
                      android:orientation="horizontal"
                      android:padding="8dp"
                      android:id="@+id/product_view"
                      android:background="@drawable/rect1"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textSize="13.7sp"
                      android:fontFamily="@font/sfpro_display_semibold"


                      android:textColor="@color/black"

                      android:text="Click here to view Product  : "
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:textSize="13.7sp"
                      android:fontFamily="@font/sfpro_display_semibold"

                      android:textColor="@color/red"
                      android:id="@+id/product_id"
                      android:text="454 "
                      android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:layout_weight="1"
                android:text="12/12/2018"

                android:textColor="@color/white"
                android:textSize="10.7sp"
                android:fontFamily="@font/sfpro_display_semibold"

        />

    </LinearLayout>
    <ImageView android:layout_width="160dp"
               android:visibility="gone"
               android:id="@+id/image"
               android:layout_height="100dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/imageView2"-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginEnd="5dp"-->
    <!--android:src="@drawable/ic_person_black_24dp"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginRight="5dp" />-->
    <LinearLayout
            android:id="@+id/linear_layout"

            android:layout_width="300dp"


            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_alignParentTop="true"

            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner1"
            android:orientation="vertical"
            android:padding="10dp">


        <TextView
                android:id="@+id/MEname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="2dp"
                android:text="Me"
                android:textColor="@color/white"
                android:textSize="11.7sp"
                android:fontFamily="@font/sfpro_display_semibold"

                android:textStyle="italic"/>


        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textSize="13.7sp"
                      android:fontFamily="@font/sfpro_display_semibold"

                      android:textColor="@color/colorPrimary"
                      android:id="@+id/MEmessage"
                      android:text="Message will be here "
                      android:layout_height="wrap_content"/>

            <ImageView android:layout_width="16dp"
                       android:layout_toEndOf="@+id/message"
                       android:id="@+id/done_all"
                       android:visibility="gone"
                       android:layout_centerInParent="true"
                       android:src="@drawable/ic_done_all_black_24dp"
                       android:layout_alignParentEnd="true"
                       android:layout_height="16dp"/>
            <ImageView android:layout_width="16dp"
                       android:id="@+id/done"
                       android:layout_centerInParent="true"
                       android:layout_toEndOf="@+id/message"

                       android:visibility="gone"
                       android:src="@drawable/ic_done_black_24dp"
                       android:layout_alignParentEnd="true"
                       android:layout_height="16dp"/>


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent"
                       android:visibility="gone"
                       android:id="@+id/MEimage"

                       android:src="@drawable/ic_image_black_24dp"
                       android:layout_height="70dp"/>

            <TextView
                    android:id="@+id/MEdate"
                    android:layout_below="@+id/MEimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    android:layout_weight="1"
                    android:text="12/12/2018"

                    android:textColor="@color/white"
                    android:textSize="10.7sp"
                    android:fontFamily="@font/sfpro_display_semibold"

            />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_margin="6dp"
                  android:visibility="gone"
                  android:orientation="horizontal"
                  android:padding="8dp"
                  android:id="@+id/MEproduct_view"
                  android:background="@drawable/rect1"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textSize="13.7sp"
                  android:fontFamily="@font/sfpro_display_semibold"

                  android:textColor="@color/black"

                  android:text="Click here to view Product  : "
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:textSize="13.7sp"
                  android:fontFamily="@font/sfpro_display_semibold"

                  android:textColor="@color/red"
                  android:id="@+id/MEproduct_id"
                  android:text="454 "
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>